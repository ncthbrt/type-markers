{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist/",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "strict": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "target": "es6"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}